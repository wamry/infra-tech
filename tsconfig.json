{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@api": ["./api"],
      "@api/*": ["./api/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
      "@i18n": ["./i18n"],
      "@i18n/*": ["./i18n/*"],
      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
    },
  },
  "include": [
    "src"
  ]
}
